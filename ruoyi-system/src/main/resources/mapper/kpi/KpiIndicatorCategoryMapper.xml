<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kpi.mapper.KpiIndicatorCategoryMapper">

    <resultMap type="com.ruoyi.kpi.domain.KpiIndicatorCategory" id="KpiIndicatorCategoryResult">
        <id     property="id"        column="id" />
        <result property="parentId"  column="parent_id" />
        <result property="name"      column="name" />
        <result property="sort"      column="sort" />
        <result property="status"    column="status" />
        <result property="remark"    column="remark" />
        <result property="createBy"  column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy"  column="update_by" />
        <result property="updateTime" column="update_time" />
        <result property="delFlag"   column="del_flag" />
    </resultMap>

    <sql id="selectColumns">
        id, parent_id, name, sort, status, remark, create_by, create_time, update_by, update_time, del_flag
    </sql>

    <select id="selectKpiIndicatorCategoryById" parameterType="long" resultMap="KpiIndicatorCategoryResult">
        select <include refid="selectColumns"/> from kpi_indicator_category where id = #{id}
    </select>

    <select id="selectKpiIndicatorCategoryList" parameterType="com.ruoyi.kpi.domain.KpiIndicatorCategory" resultMap="KpiIndicatorCategoryResult">
        select <include refid="selectColumns"/> from kpi_indicator_category
        <where>
            <if test="name != null and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
            <if test="parentId != null"> and parent_id = #{parentId}</if>
            and del_flag = '0'
        </where>
        order by sort asc, id asc
    </select>

    <insert id="insertKpiIndicatorCategory" parameterType="com.ruoyi.kpi.domain.KpiIndicatorCategory" useGeneratedKeys="true" keyProperty="id">
        insert into kpi_indicator_category(parent_id, name, sort, status, remark, create_by, create_time, del_flag)
        values(#{parentId}, #{name}, #{sort}, IFNULL(#{status}, '0'), #{remark}, #{createBy}, now(), IFNULL(#{delFlag}, '0'))
    </insert>

    <update id="updateKpiIndicatorCategory" parameterType="com.ruoyi.kpi.domain.KpiIndicatorCategory">
        update kpi_indicator_category
        <set>
            <if test="parentId != null"> parent_id = #{parentId},</if>
            <if test="name != null and name != ''"> name = #{name},</if>
            <if test="sort != null"> sort = #{sort},</if>
            <if test="status != null and status != ''"> status = #{status},</if>
            <if test="remark != null"> remark = #{remark},</if>
            update_by = #{updateBy},
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteKpiIndicatorCategoryById" parameterType="long">
        delete from kpi_indicator_category where id = #{id}
    </delete>

    <delete id="deleteKpiIndicatorCategoryByIds" parameterType="long">
        delete from kpi_indicator_category where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">#{id}</foreach>
    </delete>

</mapper> 