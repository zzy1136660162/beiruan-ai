<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kpi.mapper.KpiCycleMapper">

    <resultMap type="com.ruoyi.kpi.domain.KpiCycle" id="KpiCycleResult">
        <id     property="id"        column="id" />
        <result property="cycleType" column="cycle_type" />
        <result property="year"      column="year" />
        <result property="startTime" column="start_time" />
        <result property="endTime"   column="end_time" />
        <result property="status"    column="status" />
        <result property="remark"    column="remark" />
        <result property="createBy"  column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy"  column="update_by" />
        <result property="updateTime" column="update_time" />
        <result property="delFlag"   column="del_flag" />
    </resultMap>

    <sql id="selectColumns">
        id, cycle_type, year, start_time, end_time, status, remark, create_by, create_time, update_by, update_time, del_flag
    </sql>

    <select id="selectKpiCycleById" parameterType="long" resultMap="KpiCycleResult">
        select <include refid="selectColumns"/> from kpi_cycle where id = #{id}
    </select>

    <select id="selectKpiCycleList" parameterType="com.ruoyi.kpi.domain.KpiCycle" resultMap="KpiCycleResult">
        select <include refid="selectColumns"/> from kpi_cycle
        <where>
            and del_flag = '0'
            <if test="cycleType != null and cycleType != ''"> and cycle_type = #{cycleType}</if>
            <if test="year != null"> and year = #{year}</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <insert id="insertKpiCycle" parameterType="com.ruoyi.kpi.domain.KpiCycle" useGeneratedKeys="true" keyProperty="id">
        insert into kpi_cycle(cycle_type, year, start_time, end_time, status, remark, create_by, create_time, del_flag)
        values(#{cycleType}, #{year}, #{startTime}, #{endTime}, #{status}, #{remark}, #{createBy}, now(), #{delFlag})
    </insert>

    <update id="updateKpiCycle" parameterType="com.ruoyi.kpi.domain.KpiCycle">
        update kpi_cycle
        <set>
            <if test="cycleType != null and cycleType != ''"> cycle_type = #{cycleType},</if>
            <if test="year != null"> year = #{year},</if>
            <if test="startTime != null"> start_time = #{startTime},</if>
            <if test="endTime != null"> end_time = #{endTime},</if>
            <if test="status != null and status != ''"> status = #{status},</if>
            <if test="remark != null"> remark = #{remark},</if>
            update_by = #{updateBy},
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteKpiCycleById" parameterType="long">
        delete from kpi_cycle where id = #{id}
    </delete>

    <delete id="deleteKpiCycleByIds" parameterType="long">
        delete from kpi_cycle where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">#{id}</foreach>
    </delete>

</mapper> 