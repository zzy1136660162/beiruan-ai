<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kpi.mapper.KpiIndicatorMapper">

    <resultMap type="com.ruoyi.kpi.domain.KpiIndicator" id="KpiIndicatorResult">
        <id     property="id"        column="id" />
        <result property="year"      column="year" />
        <result property="kind"      column="kind" />
        <result property="categoryId" column="category_id" />
        <result property="name"      column="name" />
        <result property="description" column="description" />
        <result property="scoringStandard" column="scoring_standard" />
        <result property="source"    column="source" />
        <result property="scoreFull" column="score_full" />
        <result property="status"    column="status" />
        <result property="remark"    column="remark" />
        <result property="createBy"  column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy"  column="update_by" />
        <result property="updateTime" column="update_time" />
        <result property="delFlag"   column="del_flag" />
    </resultMap>

    <sql id="selectColumns">
        id, year, kind, category_id, name, description, scoring_standard, source, score_full, status, remark,
        create_by, create_time, update_by, update_time, del_flag
    </sql>

    <select id="selectKpiIndicatorById" parameterType="long" resultMap="KpiIndicatorResult">
        select <include refid="selectColumns"/> from kpi_indicator where id = #{id}
    </select>

    <select id="selectKpiIndicatorList" parameterType="com.ruoyi.kpi.domain.KpiIndicator" resultMap="KpiIndicatorResult">
        select <include refid="selectColumns"/> from kpi_indicator
        <where>
            and del_flag = '0'
            <if test="year != null"> and year = #{year}</if>
            <if test="kind != null and kind != ''"> and kind = #{kind}</if>
            <if test="categoryId != null"> and category_id = #{categoryId}</if>
            <if test="name != null and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <insert id="insertKpiIndicator" parameterType="com.ruoyi.kpi.domain.KpiIndicator" useGeneratedKeys="true" keyProperty="id">
        insert into kpi_indicator(year, kind, category_id, name, description, scoring_standard, source, score_full, status, remark, create_by, create_time, del_flag)
        values(#{year}, #{kind}, #{categoryId}, #{name}, #{description}, #{scoringStandard}, #{source}, #{scoreFull}, #{status}, #{remark}, #{createBy}, now(), #{delFlag})
    </insert>

    <update id="updateKpiIndicator" parameterType="com.ruoyi.kpi.domain.KpiIndicator">
        update kpi_indicator
        <set>
            <if test="year != null"> year = #{year},</if>
            <if test="kind != null and kind != ''"> kind = #{kind},</if>
            <if test="categoryId != null"> category_id = #{categoryId},</if>
            <if test="name != null and name != ''"> name = #{name},</if>
            <if test="description != null"> description = #{description},</if>
            <if test="scoringStandard != null"> scoring_standard = #{scoringStandard},</if>
            <if test="source != null"> source = #{source},</if>
            <if test="scoreFull != null"> score_full = #{scoreFull},</if>
            <if test="status != null and status != ''"> status = #{status},</if>
            <if test="remark != null"> remark = #{remark},</if>
            update_by = #{updateBy},
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteKpiIndicatorById" parameterType="long">
        delete from kpi_indicator where id = #{id}
    </delete>

    <delete id="deleteKpiIndicatorByIds" parameterType="long">
        delete from kpi_indicator where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">#{id}</foreach>
    </delete>

</mapper> 